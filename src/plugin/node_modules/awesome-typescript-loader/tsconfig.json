{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [ "es6", "dom" ]
    },
    "files": [
        "node_modules/typescript/lib/typescriptServices.d.ts"
    ],
    "compileOnSave": false,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test/node_modules",
        "src/test/fixtures",
        "src/test/output/*"
    ]
}
